def get_creds():
    user_name = input('username: ')
    if user_name == 'teneaallen':
        return get_pw()
    else:
        print('That username does not match our records. Please Try again.')
        return get_creds()
def get_pw():
    for i in range (0,3):
        pass_word = input('password: ')
        i += 1
        if pass_word == 'github4this':
            print('Login successful!') 
        else:
            print('Incorrect password, please try again.')
get_creds()
